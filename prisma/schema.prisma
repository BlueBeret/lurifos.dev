generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model diary {
  uuid        String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title       String    @db.VarChar(255)
  body        String?
  timecreated DateTime? @default(now()) @db.Timestamp(0)
  lastedited  DateTime? @default(now()) @db.Timestamp(0)
}

model qna {
  uuid        String    @id @db.Uuid
  question    String    @db.VarChar(255)
  answer      String?
  timecreated DateTime? @db.Timestamp(0)
  lastedited  DateTime? @db.Timestamp(0)
}
